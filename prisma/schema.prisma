generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum StatusAbsensi {
  TEPAT
  TERLAMBAT
}

enum RequestStatus {
  MENUNGGU
  SETUJU
  DITOLAK
}

enum JenisPengajuan {
  IZIN
  SAKIT
  CUTI
}

model User {
  id_user         String   @id @default(uuid())
  email           String   @unique
  name            String?
  password_hash   String
  status          String?
  nomor_handphone String?
  nip             String?  @unique
  foto_profil_url String?  @db.Text
  role            String   @default("GURU")
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  user_roles        UserRole[]
  overrides         UserPermissionOverride[]
  reset_tokens      PasswordResetToken[]
  jadwalShiftKerjas JadwalShiftKerja[]
  userFace          UserFace?
  absensis          Absensi[]
  face_requests     FaceResetRequest[]       @relation("UserRequests")
  admin_decisions   FaceResetRequest[]       @relation("AdminDecisions")
  pengajuans        PengajuanAbsensi[]       @relation("UserPengajuan")
  persetujuans_adm  PengajuanAbsensi[]       @relation("AdminPersetujuan")

  @@map("users")
}

model PasswordResetToken {
  id_password_reset_token String    @id @default(uuid())
  id_user                 String
  code_hash               String
  expires_at              DateTime
  consumed_at             DateTime?

  user User @relation(fields: [id_user], references: [id_user], onDelete: Cascade)

  @@index([id_user])
  @@index([expires_at])
  @@map("password_reset_tokens")
}

/// ========== RBAC DINAMIS (CRUD) ==========
model Role {
  id_role     String   @id @default(uuid())
  name        String   @unique
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user_roles       UserRole[]
  role_permissions RolePermission[]

  @@map("roles")
}

model Permission {
  id_permission String   @id @default(uuid())
  resource      String // contoh: "absensi", "izin", "pegawai"
  action        String // "create" | "read" | "update" | "delete"
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  role_permissions RolePermission[]
  user_overrides   UserPermissionOverride[]

  @@unique([resource, action])
  @@index([resource])
  @@index([action])
  @@map("permissions")
}

model UserRole {
  id_user String
  id_role String

  user User @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  role Role @relation(fields: [id_role], references: [id_role], onDelete: Cascade)

  @@id([id_user, id_role])
  @@index([id_role])
  @@map("user_roles")
}

model RolePermission {
  id_role       String
  id_permission String

  role       Role       @relation(fields: [id_role], references: [id_role], onDelete: Cascade)
  permission Permission @relation(fields: [id_permission], references: [id_permission], onDelete: Cascade)

  @@id([id_role, id_permission])
  @@index([id_permission])
  @@map("role_permissions")
}

model UserPermissionOverride {
  id_user       String
  id_permission String
  grant         Boolean // true=allow, false=deny

  user       User       @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  permission Permission @relation(fields: [id_permission], references: [id_permission], onDelete: Cascade)

  @@id([id_user, id_permission])
  @@index([id_permission])
  @@map("user_permission_overrides")
}

model PolaJamKerja {
  id_pola_kerja     String   @id @default(uuid())
  nama_pola_kerja   String   @unique
  jam_mulai_kerja   DateTime @db.Time
  jam_selesai_kerja DateTime @db.Time
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  jadwal_shifts JadwalShiftKerja[]

  @@map("pola_jam_kerja")
}

model JadwalShiftKerja {
  id_jadwal_shift String   @id @default(uuid())
  id_user         String
  id_pola_kerja   String
  tanggal         DateTime

  user           User         @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  pola_jam_kerja PolaJamKerja @relation(fields: [id_pola_kerja], references: [id_pola_kerja], onDelete: Cascade)
  absensis       Absensi[]

  @@unique([id_user, tanggal])
  @@index([tanggal])
  @@map("jadwal_shift_kerja")
}

model Lokasi {
  id_lokasi   String   @id @default(uuid())
  nama_lokasi String   @unique
  latitude    Float
  longitude   Float
  radius      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relasi yang benar: memisahkan mana absensi masuk dan mana keluar
  absensis_datang Absensi[] @relation("LokasiDatang")
  absensis_pulang Absensi[] @relation("LokasiPulang")

  @@map("lokasi")
}

model UserFace {
  id_biometrik String @id @default(uuid())
  id_user      String @unique

  embedding_path String @db.Text
  foto_referensi String @db.Text

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [id_user], references: [id_user], onDelete: Cascade)

  @@map("user_face")
}

model Absensi {
  id_absensi      String  @id @default(uuid())
  id_user         String
  id_jadwal_shift String?

  // Kolom baru: Correlation ID untuk tracking/idempotency
  correlation_id String? @unique @db.Char(36)

  // ID Lokasi (Foreign Key)
  id_lokasi_datang String? @db.Char(36)
  id_lokasi_pulang String? @db.Char(36)

  waktu_masuk  DateTime  @default(now())
  waktu_pulang DateTime?

  face_verified_masuk  Boolean @default(false)
  face_verified_pulang Boolean @default(false)

  status_masuk  StatusAbsensi?
  status_pulang StatusAbsensi?

  // Koordinat Aktual
  in_latitude   Decimal? @db.Decimal(10, 6)
  in_longitude  Decimal? @db.Decimal(10, 6)
  out_latitude  Decimal? @db.Decimal(10, 6)
  out_longitude Decimal? @db.Decimal(10, 6)

  // RELASI
  user               User              @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  jadwal_shift_kerja JadwalShiftKerja? @relation(fields: [id_jadwal_shift], references: [id_jadwal_shift])

  lokasi_datang Lokasi? @relation("LokasiDatang", fields: [id_lokasi_datang], references: [id_lokasi])
  lokasi_pulang Lokasi? @relation("LokasiPulang", fields: [id_lokasi_pulang], references: [id_lokasi])

  @@index([id_user])
  @@index([waktu_masuk])
  @@index([correlation_id]) // Opsional: Tambahan index eksplisit jika diperlukan
  @@map("absensi")
}

model FaceResetRequest {
  id_request String        @id @default(uuid())
  id_user    String
  alasan     String        @db.Text
  status     RequestStatus @default(MENUNGGU)
  admin_note String?       @db.Text
  id_admin   String? // ID Admin yang memproses pengajuan ini

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relasi ke User (Pemohon)
  user User @relation("UserRequests", fields: [id_user], references: [id_user], onDelete: Cascade)

  // Relasi ke User (Admin yang menyetujui/menolak)
  admin User? @relation("AdminDecisions", fields: [id_admin], references: [id_user])

  @@map("face_reset_requests")
}

model PengajuanAbsensi {
  id_pengajuan    String         @id @default(uuid())
  id_user         String
  jenis_pengajuan JenisPengajuan
  tanggal_mulai   DateTime
  tanggal_selesai DateTime
  alasan          String         @db.Text
  foto_bukti_url  String?        @db.Text // Opsional: Untuk foto surat dokter atau surat izin
  status          RequestStatus  @default(MENUNGGU)
  admin_note      String?        @db.Text
  id_admin        String? // Admin yang memproses pengajuan

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relasi
  user  User  @relation("UserPengajuan", fields: [id_user], references: [id_user], onDelete: Cascade)
  admin User? @relation("AdminPersetujuan", fields: [id_admin], references: [id_user])

  @@map("pengajuan_absensi")
}
