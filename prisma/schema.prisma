generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id_user         String   @id @default(uuid())
  email           String   @unique
  name            String?
  password_hash   String
  status          String?
  nomor_handphone String?
  nip             String?  @unique
  foto_profil_url String?  @db.Text
  role            String   @default("GURU")
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  user_roles        UserRole[]
  overrides         UserPermissionOverride[]
  reset_tokens      PasswordResetToken[]
  jadwalShiftKerjas JadwalShiftKerja[]

  @@map("users")
}

model PasswordResetToken {
  id_password_reset_token String    @id @default(uuid())
  id_user                 String
  code_hash               String
  expires_at              DateTime
  consumed_at             DateTime?

  user User @relation(fields: [id_user], references: [id_user], onDelete: Cascade)

  @@index([id_user])
  @@index([expires_at])
  @@map("password_reset_tokens")
}

/// ========== RBAC DINAMIS (CRUD) ==========
model Role {
  id_role     String   @id @default(uuid())
  name        String   @unique
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user_roles       UserRole[]
  role_permissions RolePermission[]

  @@map("roles")
}

model Permission {
  id_permission String   @id @default(uuid())
  resource      String // contoh: "absensi", "izin", "pegawai"
  action        String // "create" | "read" | "update" | "delete"
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  role_permissions RolePermission[]
  user_overrides   UserPermissionOverride[]

  @@unique([resource, action])
  @@index([resource])
  @@index([action])
  @@map("permissions")
}

model UserRole {
  id_user String
  id_role String

  user User @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  role Role @relation(fields: [id_role], references: [id_role], onDelete: Cascade)

  @@id([id_user, id_role])
  @@index([id_role])
  @@map("user_roles")
}

model RolePermission {
  id_role       String
  id_permission String

  role       Role       @relation(fields: [id_role], references: [id_role], onDelete: Cascade)
  permission Permission @relation(fields: [id_permission], references: [id_permission], onDelete: Cascade)

  @@id([id_role, id_permission])
  @@index([id_permission])
  @@map("role_permissions")
}

model UserPermissionOverride {
  id_user       String
  id_permission String
  grant         Boolean // true=allow, false=deny

  user       User       @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  permission Permission @relation(fields: [id_permission], references: [id_permission], onDelete: Cascade)

  @@id([id_user, id_permission])
  @@index([id_permission])
  @@map("user_permission_overrides")
}

model PolaJamKerja {
  id_pola_kerja     String   @id @default(uuid())
  nama_pola_kerja   String   @unique
  jam_mulai_kerja   DateTime @db.Time
  jam_selesai_kerja DateTime @db.Time
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  jadwal_shifts JadwalShiftKerja[]

  @@map("pola_jam_kerja")
}

model JadwalShiftKerja {
  id_jadwal_shift String   @id @default(uuid())
  id_user         String
  id_pola_kerja   String
  tanggal         DateTime

  user           User         @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  pola_jam_kerja PolaJamKerja @relation(fields: [id_pola_kerja], references: [id_pola_kerja], onDelete: Cascade)

  @@unique([id_user, tanggal])
  @@index([tanggal])
  @@map("jadwal_shift_kerja")
}
